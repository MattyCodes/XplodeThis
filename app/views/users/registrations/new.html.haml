.container.text-center{ style: "margin: 20px 0;" }
  %h1.text-left.page-header.heavy-font{ style: "margin: 50px auto; width: fit-content; padding: 20px 30px;" } Create User

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|

    .form-group
      = f.label :email, class: "users-label"
      = f.email_field :email, autofocus: true, autocomplete: "email"

    .form-group
      = f.label :password, class: "users-label"
      = f.password_field :password, autocomplete: "off"

    .form-group
      = f.label :password_confirmation, class: "users-label"
      = f.password_field :password_confirmation, autocomplete: "off"

    .form-group
      %label.users-label Validation Key
      = text_field_tag :validation_key

    %div{ style: "margin: 45px auto; width: 300px;" }
      - if resource.errors.present?
        - resource.errors.messages.each do |key, val|
          - if key.present? && val.present?
            %code.form-group.text-danger{ style: 'display: block;' }
              = "#{key}: #{val.join(', ')}"

    .form-group.actions{ style: "margin: 25px 0; margin-bottom: 40px;" }
      = f.submit "Submit", class: "btn btn-primary btn-lg"
